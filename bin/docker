#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local cmd_docker="$(which /usr/local/bin/docker /usr/bin/docker 2>&- || true)"
  if [[ -x "$cmd_docker" ]]; then
    exec "$cmd_docker" "$@"
  else
    case "${1:-}" in
      version)
        echo 0
        return 0
        ;;
    esac

    echo "ERROR: docker not found: docker $*" 1>&2
    return 1
  fi
}

source sub "$0" "$@"
